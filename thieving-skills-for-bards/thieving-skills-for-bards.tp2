// Main Component Base Game                                              //
///////////////////////////////////////////////////////////////////////////

BEGIN @7 DESIGNATED 14 SUBCOMPONENT @2 LABEL EnhancedPowergamingScripts-MainNormal

REQUIRE_PREDICATE GAME_IS ~bgee bg2ee eet iwdee~ @3000

LOAD_TRA ~thieving-skills-for-bards/languages/%LANGUAGE%/script_descriptions.tra~

ACTION_IF GAME_IS ~bg2ee eet~ BEGIN
	INCLUDE ~thieving-skills-for-bards/components/BG2EE/initialize.tpa~
	INCLUDE ~thieving-skills-for-bards/components/BG2EE/prebuff.tpa~
	INCLUDE ~thieving-skills-for-bards/components/BG2EE/main_component.tpa~
END ELSE ACTION_IF GAME_IS ~bgee~ BEGIN
	INCLUDE ~thieving-skills-for-bards/components/BGEE/initialize.tpa~
	INCLUDE ~thieving-skills-for-bards/components/BGEE/main_component.tpa~
END ELSE ACTION_IF GAME_IS ~iwdee~ BEGIN
	INCLUDE ~thieving-skills-for-bards/components/IWDEE/initialize.tpa~
	INCLUDE ~thieving-skills-for-bards/components/IWDEE/main_component.tpa~
END

